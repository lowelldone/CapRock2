@model IEnumerable<Capstone2.Models.Material>

@{
    ViewData["Title"] = "Materials";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Materials Inventory</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add New Material</a>
    </div>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form asp-controller="Materials" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Search materials by name..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Quantity)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.MaterialId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.MaterialId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
