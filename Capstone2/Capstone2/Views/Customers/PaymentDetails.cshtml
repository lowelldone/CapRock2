@model Capstone2.Models.Customer
@{
    ViewData["Title"] = "Payment Details";
    var order = Model.Order;
    var payments = ViewBag.Payments as List<Capstone2.Models.Payment>;
    var chargedItems = ViewBag.ChargedItems as IEnumerable<dynamic>;
    var additionalCharges = ViewBag.AdditionalCharges != null ? (decimal)ViewBag.AdditionalCharges : 0;
    var orderTotal = (decimal)order.TotalPayment;
    var downPayment = orderTotal * 0.5m;
    var downPaymentRemaining = downPayment - (decimal)order.AmountPaid;
    var balance = orderTotal + additionalCharges - (decimal)order.AmountPaid;
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<style>
    /* Desktop styles - keep original layout */
    .modern-bg {
        padding: 2rem;
    }

    .modern-header {
        flex-direction: row;
        align-items: center;
        gap: 1rem;
    }

    .modern-action-buttons {
        display: flex;
        flex-direction: row;
        gap: 0.5rem;
    }

    .modern-action-btn {
        width: auto;
        justify-content: center;
    }

    .modern-form-control {
        font-size: 16px;
    }

    .d-flex.gap-3 {
        flex-direction: row;
        gap: 1rem !important;
    }

    .d-flex.gap-3 .modern-action-btn {
        width: auto;
    }

    .row.g-3 {
        margin: 0;
    }

    .row.g-3 > [class*="col-"] {
        padding: 0.5rem;
    }

    .modern-table {
        font-size: 0.9rem;
    }

    .modern-table th,
    .modern-table td {
        padding: 0.75rem 0.5rem;
    }

    .modern-status-badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
    }

    .modern-name {
        font-size: 1rem;
    }

    .modern-info {
        font-size: 0.9rem;
    }

    /* Mobile responsive adjustments */
    @@media (max-width: 768px) {
        .modern-bg {
            padding: 0.5rem;
        }

        .modern-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
            text-align: center;
        }

        .modern-action-buttons {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            width: 100%;
        }

        .modern-action-btn {
            width: 100%;
            justify-content: center;
        }

        .d-flex.gap-3 {
            flex-direction: column;
            gap: 1rem !important;
        }

        .d-flex.gap-3 .modern-action-btn {
            width: 100%;
        }

        .modern-title {
            font-size: 1.5rem;
        }

        .modern-subtitle {
            font-size: 0.9rem;
        }

        .modern-status-card {
            margin-bottom: 1rem;
        }

        .modern-card-body {
            padding: 1rem;
        }

        .row {
            margin: 0;
        }

        .col-md-6 {
            margin-bottom: 1rem;
        }

        .modern-table {
            font-size: 0.8rem;
        }

        .modern-table th,
        .modern-table td {
            padding: 0.5rem 0.25rem;
        }

        .modern-table th:nth-child(1),
        .modern-table td:nth-child(1) {
            min-width: 80px;
        }

        .modern-table th:nth-child(2),
        .modern-table td:nth-child(2) {
            min-width: 120px;
        }

        .modern-table th:nth-child(3),
        .modern-table td:nth-child(3) {
            min-width: 80px;
        }

        .modern-table th:nth-child(4),
        .modern-table td:nth-child(4) {
            min-width: 100px;
        }
    }

    @@media (max-width: 576px) {
        .modern-title {
            font-size: 1.25rem;
        }

        .modern-subtitle {
            font-size: 0.8rem;
        }

        .modern-form-label {
            font-size: 0.9rem;
        }

        .modern-action-btn {
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
        }

        .modern-table {
            font-size: 0.75rem;
        }

        .modern-table th,
        .modern-table td {
            padding: 0.4rem 0.2rem;
        }

        .modern-status-badge {
            font-size: 0.7rem;
            padding: 0.3rem 0.6rem;
        }

        .modern-name {
            font-size: 0.9rem;
        }

        .modern-info {
            font-size: 0.8rem;
        }

        .fs-4 {
            font-size: 1.25rem !important;
        }
    }

    /* Modal responsive adjustments */
    @@media (max-width: 768px) {
        .modal-dialog {
            margin: 0.5rem;
        }

        .modal-lg {
            max-width: calc(100% - 1rem);
        }
    }
</style>

<div class="container-fluid modern-bg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-credit-card"></i>
            </div>
            <div>
                <h1 class="modern-title">Payment Details</h1>
                <p class="modern-subtitle">Payment information for @Model.Name</p>
            </div>
        </div>
    </div>

    <!-- Payment Summary Card -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-calculator"></i>
                Payment Summary
            </h5>
        </div>
        <div class="modern-card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Order Total</label>
                        <div class="modern-name fs-4">@orderTotal.ToString("C")</div>
                    </div>
                    <div class="modern-form-group">
                        <label class="modern-form-label">Down Payment (50%)</label>
                        @if (order != null)
                        {
                            if (downPaymentRemaining <= 0)
                            {
                                <span class="modern-status-badge accepted">
                                    <i class="bi bi-check-circle"></i>
                                    Done
                                </span>
                            }
                            else
                            {
                                <div class="modern-name text-warning">@downPaymentRemaining.ToString("C")</div>
                            }
                        }
                        else
                        {
                            <div class="modern-info">None</div>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Amount Paid</label>
                        <div class="modern-name">@order.AmountPaid.ToString("C")</div>
                    </div>
                    <div class="modern-form-group">
                        <label class="modern-form-label">Balance</label>
                        <div class="modern-name @(balance > 0 ? "text-warning" : "text-success")">
                            @((balance > 0 ? balance.ToString("C") : "0.00"))
                        </div>
                    </div>
                    <div class="modern-form-group">
                        <label class="modern-form-label">Payment Status</label>
                        @if (order != null)
                        {
                            if (balance <= 0)
                            {
                                <span class="modern-status-badge accepted">
                                    <i class="bi bi-check-circle"></i>
                                    Payment Complete
                                </span>
                            }
                            else if (downPaymentRemaining > 0)
                            {
                                <span class="modern-status-badge settling">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Incomplete Payment
                                </span>
                            }
                            else
                            {
                                <span class="modern-status-badge accepted">
                                    <i class="bi bi-check-circle"></i>
                                    Ready To Cater
                                </span>
                            }
                        }
                        else
                        {
                            <span class="modern-status-badge inactive">
                                <i class="bi bi-x-circle"></i>
                                No Order
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Record New Payment Card -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-plus-circle"></i>
                Record New Payment
            </h5>
        </div>
        <div class="modern-card-body">
            @if (TempData["PaymentError"] != null)
            {
                <div class="modern-alert modern-alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["PaymentError"]
                </div>
            }
            @if (TempData["PaymentSuccess"] != null)
            {
                <div id="payment-success-toast" class="modern-alert modern-alert-success position-fixed top-0 start-50 translate-middle-x mt-3" role="alert" style="z-index: 1055; min-width: 350px; max-width: 90vw;">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["PaymentSuccess"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <script>
                    setTimeout(function () {
                        var toast = document.getElementById('payment-success-toast');
                        if (toast) {
                            var bsAlert = bootstrap.Alert.getOrCreateInstance(toast);
                            bsAlert.close();
                        }
                    }, 3500);
                </script>
            }
            <form asp-action="AddPayment" method="post" class="row g-3 align-items-end">
                @Html.AntiForgeryToken()
                <input type="hidden" name="customerId" value="@Model.CustomerID" />
                <div class="col-md-4">
                    <label class="modern-form-label">Payment Amount</label>
                    <input type="number" name="paymentAmount" min="1" step="0.01" class="modern-form-control" placeholder="Amount" required />
                </div>
                <div class="col-md-4">
                    <label class="modern-form-label">Payment Type</label>
                    <select name="paymentType" class="modern-form-control" required>
                        <option value="Cash">Cash</option>
                        <option value="Gcash">Gcash</option>
                        <option value="Bank Transfer">Bank Transfer</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="modern-action-btn btn-success">
                        <i class="bi bi-check-lg me-2"></i>Record Payment
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Payment History Card -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-clock-history"></i>
                Payment History
            </h5>
        </div>
        <div class="modern-card-body">
            @if (payments != null && payments.Count > 0)
            {
                <div class="table-responsive">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Transaction Number</th>
                                <th>Amount</th>
                                <th>Payment Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in payments)
                            {
                                <tr>
                                    <td>
                                        <div class="modern-info">@payment.Date.ToString("MM/dd/yyyy")</div>
                                    </td>
                                    <td>
                                        <span class="modern-status-badge accepted">@payment.TransactionNumber</span>
                                    </td>
                                    <td>
                                        <div class="modern-name">@payment.Amount.ToString("C")</div>
                                    </td>
                                    <td>
                                        <span class="modern-status-badge accepted">@payment.PaymentType</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="modern-alert modern-alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    No payments recorded yet.
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-3 mt-4">
        <a asp-controller="Customers" asp-action="ViewOrder" asp-route-id="@Model.CustomerID" class="modern-action-btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Order
        </a>
        @if (order != null && downPaymentRemaining <= 0 && order.HeadWaiterId == null && order.Status != "Accepted")
        {
            <a asp-action="AssignHeadWaiter" asp-route-id="@Model.CustomerID" class="modern-action-btn btn-primary ms-auto">
                <i class="bi bi-person-badge me-2"></i>Assign Head Waiter
            </a>
        }
    </div>
</div>

<!-- Modal for Items Charged -->
@if (chargedItems != null && chargedItems.Any())
{
    <div class="modal fade" id="chargedItemsModal" tabindex="-1" aria-labelledby="chargedItemsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="chargedItemsModalLabel">Items Charged (Lost/Damaged)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="modern-table">
                            <thead>
                                <tr>
                                    <th>Material</th>
                                    <th>Lost</th>
                                    <th>Damaged</th>
                                    <th>Charge Per Item</th>
                                    <th>Total Charge</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in chargedItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="modern-name">@item.MaterialName</div>
                                        </td>
                                        <td>
                                            <div class="modern-info">@item.Lost</div>
                                        </td>
                                        <td>
                                            <div class="modern-info">@item.Damaged</div>
                                        </td>
                                        <td>
                                            <div class="modern-info">₱@item.ChargePerItem</div>
                                        </td>
                                        <td>
                                            <div class="modern-name">₱@((item.Lost + item.Damaged) * item.ChargePerItem)</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
} 