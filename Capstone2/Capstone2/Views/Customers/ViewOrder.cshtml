@model Capstone2.Models.Order

@{
    ViewData["Title"] = "View Order";
    var chargedItems = ViewBag.ChargedItems as IEnumerable<dynamic>;
}

<style>
    :root {
        --primary-purple: #7c3aed;
        --primary-purple-dark: #6d28d9;
        --primary-purple-light: #a78bfa;
        --secondary-purple: #8b5cf6;
        --accent-purple: #c084fc;
        --purple-bg: #faf5ff;
        --purple-bg-light: #f3e8ff;
        --purple-border: #e9d5ff;
        --text-purple: #581c87;
        --text-purple-light: #7c3aed;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --info-color: #3b82f6;
    }

    body, .container, .card, .btn, h1, h2, h3, h4, h5, h6, p, label, input, textarea, select {
        font-family: 'Segoe UI', sans-serif;
    }

    .vieworder-bg {
        background: linear-gradient(135deg, var(--purple-bg) 0%, var(--purple-bg-light) 50%, #f8fafc 100%);
        min-height: 100vh;
        border-radius: 24px;
        padding-bottom: 2rem;
    }

    .vieworder-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .vieworder-header-icon {
        font-size: 2.5rem;
        color: var(--primary-purple);
        background: var(--purple-bg-light);
        border-radius: 12px;
        padding: 8px 14px;
        box-shadow: 0 2px 8px rgba(124, 58, 237, 0.08);
    }

    .vieworder-subtitle {
        color: var(--text-purple);
        font-size: 1.1rem;
        margin-top: -8px;
        margin-bottom: 18px;
    }

    .order-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(124, 58, 237, 0.1);
        border: 1px solid var(--purple-border);
        padding: 2rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .order-card:hover {
            box-shadow: 0 12px 40px 0 rgba(124, 58, 237, 0.15);
            transform: translateY(-2px);
        }

    .order-row {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--purple-border);
    }

        .order-row:last-child {
            border-bottom: none;
        }

    .order-label {
        font-weight: 600;
        color: var(--text-purple);
        font-size: 1rem;
    }

    .order-value {
        color: var(--text-purple-light);
        font-size: 1rem;
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(124, 58, 237, 0.1);
        border: 1px solid var(--purple-border);
    }

        .table thead th {
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
            border: none;
            font-weight: 600;
            color: white;
            padding: 1rem;
        }

        .table tbody td {
            padding: 1rem;
            border: none;
            border-bottom: 1px solid var(--purple-border);
        }

        .table tbody tr {
            background: #fff;
        }

            .table tbody tr:hover {
                background: var(--purple-bg-light);
            }

    .btn-action {
        font-weight: 500;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
        border-color: var(--primary-purple);
        color: white;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-purple-dark) 0%, var(--primary-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.3);
        }

    .btn-warning {
        background: linear-gradient(135deg, var(--warning-color) 0%, #fbbf24 100%);
        border-color: var(--warning-color);
        color: white;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #d97706 0%, var(--warning-color) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(245, 158, 11, 0.3);
        }

    .btn-outline-secondary {
        border-color: var(--text-purple);
        color: var(--text-purple);
        background: transparent;
    }

        .btn-outline-secondary:hover {
            background: var(--text-purple);
            color: white;
            transform: translateY(-2px);
        }

    .total-section {
        background: var(--purple-bg-light);
        border-radius: 12px;
        padding: 1.5rem;
        margin-top: 1rem;
        border: 1px solid var(--purple-border);
    }

    .staff-section {
        background: var(--purple-bg-light);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 1px solid var(--purple-border);
    }

    .staff-info {
        background: #fff;
        border-radius: 8px;
        padding: 1rem;
        border: 1px solid var(--purple-border);
        box-shadow: 0 2px 8px rgba(124, 58, 237, 0.1);
    }

    .table-sm {
        font-size: 0.9rem;
    }

        .table-sm thead th {
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
            color: white;
            font-weight: 600;
            padding: 0.75rem;
        }

        .table-sm tbody td {
            padding: 0.75rem;
            border-bottom: 1px solid var(--purple-border);
        }

    .text-primary {
        color: var(--primary-purple) !important;
    }

    .text-success {
        color: var(--success-color) !important;
    }

    .text-muted {
        color: var(--text-purple) !important;
    }
</style>

<div class="container-fluid mt-4 px-4 vieworder-bg">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <div class="vieworder-header mb-1">
                <span class="vieworder-header-icon"><i class="bi bi-receipt"></i></span>
                <h2 class="fw-bold mb-0">Order Details</h2>
            </div>
            <div class="vieworder-subtitle">View order information for @Model.Customer.Name</div>
        </div>
    </div>

    <div class="order-card">
        <div class="row">
            <div class="col-md-6">
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Contact:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.Customer.ContactNo</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Address:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.Customer.Address</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Venue:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.Venue</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">No. Of Pax:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.NoOfPax</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Order Date:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.OrderDate.ToShortDateString()</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Catering Date:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.CateringDate.ToShortDateString()</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Time of Food Serving:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.timeOfFoodServing.ToShortTimeString()</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Occasion:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.Occasion</span>
                        </div>
                    </div>
                </div>
                <div class="order-row">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="order-label">Motif:</span>
                        </div>
                        <div class="col-md-8">
                            <span class="order-value">@Model.Motif</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.OrderDetails?.Any() == true)
    {
        <div class="order-card">
            <h4 class="fw-bold mb-3">Ordered Items</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Menu</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>P@(item.Menu.Price.ToString("0.00"))</td>
                            <td>P@((item.Menu.Price * item.Quantity).ToString("0.00"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="total-section">
                <h5 class="fw-bold mb-0">Total Payment: P@(Model.TotalPayment.ToString("0.00"))</h5>

                @if (ViewBag.AdditionalCharges != null && (decimal)ViewBag.AdditionalCharges > 0)
                {
                    <div class="mt-2">
                        <h6 class="fw-bold text-danger">Additional Charges</h6>
                        @if (chargedItems != null && chargedItems.Any())
                        {
                            <div class="mt-2">
                                <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#chargedItemsModal">
                                    View Charged Items
                                </button>
                            </div>
                        }
                        <p class="fw-bold text-danger">Total Additional Charges: ₱@(((decimal)ViewBag.AdditionalCharges).ToString("F2"))</p>
                    </div>
                }

                <hr />
                @if (Model.Status != "Pending")
                {
                    <h5 class="fw-bold text-primary">Updated Total: ₱@(((decimal)ViewBag.EffectiveTotal).ToString("F2"))</h5>
                    @if (Model.Status != "Completed")
                    {
                        <p class="fw-bold @(ViewBag.RemainingBalance > 0 ? "text-warning" : "text-success")">
                            Remaining Balance: ₱@(((decimal)ViewBag.RemainingBalance).ToString("F2"))
                        </p>
                    }
                }
            </div>
        </div>
    }
    else
    {
        <div class="order-card">
            <div class="text-center">
                <p class="text-muted"><em>No items in this order.</em></p>
            </div>
        </div>
    }

    @if (Model.Status == "Completed")
    {
        <div class="order-card">
            <h4 class="fw-bold mb-3">Assigned Staff</h4>

            @if (Model.HeadWaiter != null)
            {
                <div class="staff-section mb-4">
                    <h5 class="fw-bold text-primary mb-2">
                        <i class="bi bi-person-badge me-2"></i>Head Waiter
                    </h5>
                    <div class="staff-info">
                        <div class="row">
                            <div class="col-md-6">
                                <span class="order-label">Name:</span>
                                <span class="order-value">@Model.HeadWaiter.User.FirstName @Model.HeadWaiter.User.LastName</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewBag.OrderWaiters != null && ((IEnumerable<dynamic>)ViewBag.OrderWaiters).Any())
            {
                <div class="staff-section">
                    <h5 class="fw-bold text-success mb-2">
                        <i class="bi bi-people me-2"></i>Waiters
                    </h5>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var orderWaiter in (IEnumerable<dynamic>)ViewBag.OrderWaiters)
                                {
                                    <tr>
                                        <td>@orderWaiter.Waiter.User.FirstName @orderWaiter.Waiter.User.LastName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center">
                    <p class="text-muted"><em>No waiters were assigned to this order.</em></p>
                </div>
            }
        </div>
    }

    <div class="d-flex gap-3 mt-4">
        @if (Model.Status != "Completed" && Model.Status != "Ongoing" && Model.Status != "Accepted" && Model.Status != "Settling Balance")
        {
            <a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary btn-action">
                <i class="bi bi-pencil-square me-2"></i>Edit Information
            </a>
            <a asp-controller="OrderDetails" asp-action="Edit" asp-route-orderId="@Model.OrderId" class="btn btn-warning btn-action">
                <i class="bi bi-list-ul me-2"></i>Edit Food Items
            </a>
        }
        <a asp-action="Index" class="btn btn-outline-secondary btn-action">
            <i class="bi bi-arrow-left me-2"></i>Back to Customers
        </a>
        @if (Model.Status != "Accepted" && Model.Status != "Ongoing" && Model.Status != "Completed" && Model.Status != "Settling Balance")
        {
            <a asp-action="PaymentDetails" asp-route-id="@Model.Customer.CustomerID" class="btn btn-success btn-action ms-auto">
                <i class="bi bi-check-circle me-2"></i>Confirm Order
            </a>
        }
    </div>
</div>

@if (chargedItems != null && chargedItems.Any())
{
    <div class="modal fade" id="chargedItemsModal" tabindex="-1" aria-labelledby="chargedItemsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="chargedItemsModalLabel">Items Charged (Lost/Damaged)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Lost</th>
                                <th>Damaged</th>
                                <th>Charge Per Item</th>
                                <th>Total Charge</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in chargedItems)
                            {
                                <tr>
                                    <td>@item.MaterialName</td>
                                    <td>@item.Lost</td>
                                    <td>@item.Damaged</td>
                                    <td>₱@item.ChargePerItem</td>
                                    <td>₱@((item.Lost + item.Damaged) * item.ChargePerItem)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
