@model Capstone2.Models.Order

@{
    ViewData["Title"] = "View Order";
}

<h2>Order Details for @Model.Customer.Name</h2>

<p><strong>Contact:</strong> @Model.Customer.ContactNo</p>
<p><strong>Address:</strong> @Model.Customer.Address</p>
<p><strong>Venue:</strong> @Model.Venue</p>
<p><strong>No. Of Pax: </strong>@Model.NoOfPax</p>
<p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>
<p><strong>Catering Date:</strong> @Model.CateringDate.ToShortDateString()</p>
<p><strong>Time of Food Serving:</strong> @Model.timeOfFoodServing.ToShortTimeString()</p>
<p><strong>Occasion:</strong> @Model.Occasion</p>
<p><strong>Motif:</strong> @Model.Motif</p>

<a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary">Edit Information</a>

@if (Model.OrderDetails?.Any() == true)
{
    <h4>Ordered Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Menu</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>P@(item.Menu.Price.ToString("0.00"))</td>
                    <td>P@((item.Menu.Price * item.Quantity).ToString("0.00"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <strong>Total Payment:</strong>
        P@(Model.TotalPayment.ToString("0.00"))
    </div>
}
else
{
    <p><em>No items in this order.</em></p>
}

<div class="mt-4">
    <a asp-controller="OrderDetails" asp-action="Edit" asp-route-orderId="@Model.OrderId" class="btn btn-warning">Edit Food Items</a>
</div>

<a asp-action="Index" class="btn btn-secondary mt-4">Back to Customers</a>
