@model Capstone2.Models.PullOutMaterialsViewModel

@{
    ViewData["Title"] = "Pull Out Materials";
}

<h2>Pull Out Materials for Order (Pax: @Model.Pax)</h2>

<form asp-action="PullOutMaterials" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
    <input type="hidden" name="Pax" value="@Model.Pax" />
    <table class="table">
        <thead>
            <tr>
                <th>Material</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Materials)
            {
                <tr>
                    <td>@item.Key</td>
                    <td>
                        <input type="number" name="Materials[@item.Key]" value="@item.Value" min="0" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Confirm Pull Out</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form> 