@model Capstone2.Models.InventoryReportViewModel

@{
    ViewData["Title"] = "Inventory Report";
    bool fromPast = ViewBag.FromPastOrders ?? false;
}

<style>
    body, .container, .card, .btn, h1, h2, h3, h4, h5, h6, p, label, input, textarea, select {
        font-family: 'Segoe UI', sans-serif;
    }

    .inventory-bg {
        background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);
        min-height: 100vh;
        border-radius: 24px;
        padding-bottom: 2rem;
    }

    .inventory-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .inventory-header-icon {
        font-size: 2.5rem;
        color: #0d6efd;
        background: #e0f2fe;
        border-radius: 12px;
        padding: 8px 14px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
    }

    .inventory-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: -8px;
        margin-bottom: 18px;
    }

    .inventory-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.08);
        padding: 2rem;
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .table thead th {
            background: #f8fafc;
            border: none;
            font-weight: 600;
            color: #344767;
            padding: 1rem;
        }

        .table tbody td {
            padding: 1rem;
            border: none;
            border-bottom: 1px solid #f1f5f9;
        }

        .table tbody tr:nth-child(even) {
            background: #f8fafc;
        }

        .table tbody tr:hover {
            background: #e0f2fe;
        }

    .btn-back {
        font-weight: 500;
        border-radius: 8px;
        padding: 0.5rem 1rem;
    }
</style>

<div class="container-fluid mt-4 px-4 inventory-bg">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <div class="inventory-header mb-1">
                <span class="inventory-header-icon"><i class="bi bi-clipboard-data"></i></span>
                <h2 class="fw-bold mb-0">Inventory Report</h2>
            </div>
            <div class="inventory-subtitle">Material tracking for order @Model.CustomerName</div>
        </div>
    </div>

    <div class="inventory-card">
        <table class="table">
            <thead>
                <tr>
                    <th>Material</th>
                    <th>Pulled Out</th>
                    <th>Returned</th>
                    <th>Lost</th>
                    <th>Damaged</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.MaterialName</td>
                        <td>@item.PulledOut</td>
                        @if (item.IsConsumable)
                        {
                            <td>0</td>
                            <td>0</td>
                            <td>0</td>
                        }
                        else
                        {
                            <td>@item.Returned</td>
                            <td>@item.Lost</td>
                            <td>@item.Damaged</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        @if (fromPast)
        {
            <a asp-action="PastOrders" class="btn btn-outline-secondary btn-back">
                <i class="bi bi-arrow-left me-2"></i>Back to Past Orders
            </a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-outline-secondary btn-back">
                <i class="bi bi-arrow-left me-2"></i>Back to Customers
            </a>
        }
    </div>
</div> 