@model Capstone2.Models.Customer
@{
    ViewData["Title"] = "Assign Head Waiter";
    var headWaiters = ViewBag.HeadWaiters as List<Capstone2.Models.HeadWaiter>;
    int? selectedHeadWaiterId = ViewBag.SelectedHeadWaiterId as int?;
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-person-badge"></i>
            </div>
            <div>
                <h1 class="modern-title">Assign Head Waiter</h1>
                <p class="modern-subtitle">Assign a head waiter to manage this customer's order.</p>
            </div>
        </div>
    </div>

    <!-- Assignment Form Card -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-person-plus"></i>
                Head Waiter Assignment
            </h5>
        </div>
        <div class="modern-card-body">
            <form asp-action="AssignHeadWaiter" asp-route-id="@Model.CustomerID" method="post">
                <div class="modern-form-group">
                    <label for="headWaiterId" class="modern-form-label">Select Head Waiter</label>
                    <select id="headWaiterId" name="headWaiterId" class="modern-form-control" required>
                        <option value="">-- Select Head Waiter --</option>
                        @foreach (var hw in headWaiters)
                        {
                            var isSelected = selectedHeadWaiterId == hw.HeadWaiterId ? "selected=\"selected\"" : string.Empty;
                            @:<option value="@hw.HeadWaiterId" @isSelected>@hw.User.FirstName @hw.User.LastName (@hw.User.Username)</option>
                        }
                    </select>
                </div>
                <div class="d-flex gap-3">
                    <button type="submit" class="modern-action-btn btn-primary">
                        <i class="bi bi-check-lg me-2"></i>Assign Head Waiter
                    </button>
                    <a asp-action="Index" class="modern-action-btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 