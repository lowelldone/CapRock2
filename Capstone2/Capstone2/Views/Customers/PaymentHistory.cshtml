@model Capstone2.Models.Order

@{
    ViewData["Title"] = "Payment History";
    var payments = ViewBag.Payments as List<Capstone2.Models.Payment>;
    var fromPastOrders = Context.Request.Query["fromPastOrders"].ToString();
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-clock-history"></i>
            </div>
            <div>
                <h1 class="modern-title">Payment History</h1>
                <p class="modern-subtitle">Payment history for @Model.Customer.Name</p>
            </div>
        </div>
    </div>

    <!-- Payment History Card -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-clock-history"></i>
                Payment History
            </h5>
        </div>
        <div class="modern-card-body">
            @if (payments != null && payments.Count > 0)
            {
                <div class="table-responsive">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Transaction Number</th>
                                <th>Payment Type</th>
                                <th>Amount</th>
                                @* <th>Running Total</th> *@
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                double runningTotal = 0;
                            }
                            @foreach (var payment in payments.OrderBy(p => p.Date))
                            {
                                runningTotal += payment.Amount;
                                <tr>
                                    <td>
                                        <div class="modern-info">@payment.Date.ToString("MM/dd/yyyy")</div>
                                    </td>
                                    <td>
                                        <span class="modern-status-badge accepted">@payment.TransactionNumber</span>
                                    </td>
                                    <td>
                                        <span class="modern-status-badge accepted">@payment.PaymentType</span>
                                    </td>
                                    <td>
                                        <div class="modern-name">₱@payment.Amount.ToString("F2")</div>
                                    </td>
                                    @* <td>
                                        <div class="modern-name text-success">₱@runningTotal.ToString("F2")</div>
                                    </td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-clock-history text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3 text-muted">No Payment History</h5>
                    <p class="text-muted">No payments have been recorded for this order yet.</p>
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-3 mt-4">
        @if (!string.IsNullOrEmpty(fromPastOrders))
        {
            <a asp-action="ViewOrder" asp-route-id="@Model.Customer.CustomerID" asp-route-fromPastOrders="true" class="modern-action-btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        }
        else
        {
            <a asp-action="ViewOrder" asp-route-id="@Model.Customer.CustomerID" class="modern-action-btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        }
    </div>
</div>
