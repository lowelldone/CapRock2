@model Capstone2.Models.PullOutMaterialsViewModel

@{
    ViewData["Title"] = "Pull Out Materials";
    var consumableNames = new HashSet<string>(new[] { "Tissue", "Drinking Straw", "Toothpicks", "Table Napkins" }, StringComparer.OrdinalIgnoreCase);
    var nonConsumables = Model.Materials.Where(m => !consumableNames.Contains(m.Name)).ToList();
    var consumables = Model.Materials.Where(m => consumableNames.Contains(m.Name)).ToList();
}

<style>
    body, .container, .card, .btn, h1, h2, h3, h4, h5, h6, p, label, input, textarea, select {
        font-family: 'Segoe UI', sans-serif;
    }

    .pullout-bg {
        background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);
        min-height: 100vh;
        border-radius: 24px;
        padding-bottom: 2rem;
    }

    .pullout-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .pullout-header-icon {
        font-size: 2.5rem;
        color: #0d6efd;
        background: #e0f2fe;
        border-radius: 12px;
        padding: 8px 14px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
    }

    .pullout-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: -8px;
        margin-bottom: 18px;
    }

    .pullout-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.08);
        padding: 2rem;
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .table thead th {
            background: #f8fafc;
            border: none;
            font-weight: 600;
            color: #344767;
            padding: 1rem;
        }

        .table tbody td {
            padding: 1rem;
            border: none;
            border-bottom: 1px solid #f1f5f9;
        }

        .table tbody tr:nth-child(even) {
            background: #f8fafc;
        }

        .table tbody tr:hover {
            background: #e0f2fe;
        }

    .form-control {
        border-radius: 12px;
        border: 1px solid #e0e7ef;
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #6476f8;
            box-shadow: 0 0 0 0.2rem rgba(100, 118, 248, 0.25);
        }

    .btn-confirm {
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        box-shadow: 0 2px 8px 0 rgba(100, 118, 248, 0.10);
    }

    .btn-cancel {
        font-weight: 500;
        border-radius: 8px;
        padding: 0.5rem 1rem;
    }
    .group-title {
        font-weight: 700;
        color: #344767;
    }
</style>

<div class="container-fluid mt-4 px-4 pullout-bg">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <div class="pullout-header mb-1">
                <span class="pullout-header-icon"><i class="bi bi-box-arrow-up"></i></span>
                <h2 class="fw-bold mb-0">Pull Out Materials</h2>
            </div>
            <div class="pullout-subtitle">
                @if (Model.Materials.Any(m => !m.IsFirstPullOut))
                {
                    @:Manage additional material pull-outs for order (Pax: @Model.Pax) - Quantities will be added to existing pull-outs
                }
                else
                {
                    @:Manage material inventory for order (Pax: @Model.Pax)
                }
            </div>
        </div>
    </div>

    <div class="pullout-card">
        <form asp-action="PullOutMaterials" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
            <input type="hidden" name="Pax" value="@Model.Pax" />

            <div class="row g-4">
                <div class="col-lg-6">
                    <h5 class="group-title mb-3">Non-Consumable Materials</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Current Inventory</th>
                                @if (Model.Materials.Any(m => !m.IsFirstPullOut))
                                {
                                    <th>Previously Pulled Out</th>
                                    <th>Additional Pull-Out Quantity</th>
                                }
                                else
                                {
                                    <th>Pull-Out Quantity</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < nonConsumables.Count; i++)
                            {
                                var idx = Model.Materials.FindIndex(m => m.MaterialId == nonConsumables[i].MaterialId);
                                var previouslyPulledOut = Model.Materials[idx].PullOutQuantity;
                                var suggestedQuantity = Capstone2.Helpers.MaterialCalculator.GetSuggestedQuantity(Model.Materials[idx].Name, Model.Pax, Model.LechonCount);
                                var isFirstPullOut = Model.Materials[idx].IsFirstPullOut;
                                <tr>
                                    <td>
                                        @Model.Materials[idx].Name
                                        <input type="hidden" name="Materials[@idx].MaterialId" value="@Model.Materials[idx].MaterialId" />
                                        <input type="hidden" name="Materials[@idx].Name" value="@Model.Materials[idx].Name" />
                                        <input type="hidden" name="Materials[@idx].CurrentQuantity" value="@Model.Materials[idx].CurrentQuantity" />
                                    </td>
                                    <td>@Model.Materials[idx].CurrentQuantity</td>
                                    @if (!isFirstPullOut)
                                    {
                                        <td>
                                            <span class="text-primary fw-bold">@previouslyPulledOut</span>
                                        </td>
                                        <td>
                                            <input type="number" name="Materials[@idx].PullOutQuantity" value="0" min="0" max="@Model.Materials[idx].CurrentQuantity" class="form-control" placeholder="Add more quantity" />
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <input type="number" name="Materials[@idx].PullOutQuantity" value="@suggestedQuantity" min="0" max="@Model.Materials[idx].CurrentQuantity" class="form-control" />
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-6">
                    <h5 class="group-title mb-3">Consumable Materials</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Current Inventory</th>
                                @if (Model.Materials.Any(m => !m.IsFirstPullOut))
                                {
                                    <th>Previously Pulled Out</th>
                                    <th>Additional Pull-Out Quantity</th>
                                }
                                else
                                {
                                    <th>Pull-Out Quantity</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < consumables.Count; i++)
                            {
                                    var idx = Model.Materials.FindIndex(m => m.MaterialId == consumables[i].MaterialId);
                                    var previouslyPulledOut = Model.Materials[idx].PullOutQuantity;
                                    var suggestedQuantity = Capstone2.Helpers.MaterialCalculator.GetSuggestedQuantity(Model.Materials[idx].Name, Model.Pax, Model.LechonCount);
                                    var isFirstPullOut = Model.Materials[idx].IsFirstPullOut;

                            <tr>
                                <td>
                                    @Model.Materials[idx].Name
                                    <input type="hidden" name="Materials[@idx].MaterialId" value="@Model.Materials[idx].MaterialId" />
                                    <input type="hidden" name="Materials[@idx].Name" value="@Model.Materials[idx].Name" />
                                    <input type="hidden" name="Materials[@idx].CurrentQuantity" value="@Model.Materials[idx].CurrentQuantity" />
                                </td>
                                <td>@Model.Materials[idx].CurrentQuantity</td>
                                @if (!isFirstPullOut)
                                {
                                    <td>
                                        <span class="text-primary fw-bold">@previouslyPulledOut</span>
                                    </td>
                                    <td>
                                        <input type="number" name="Materials[@idx].PullOutQuantity" value="0" min="0" max="@Model.Materials[idx].CurrentQuantity" class="form-control" placeholder="Add more quantity" />
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <input type="number" name="Materials[@idx].PullOutQuantity" value="@suggestedQuantity" min="0" max="@Model.Materials[idx].CurrentQuantity" class="form-control" />
                                    </td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-primary btn-confirm">
                    <i class="bi bi-check-lg me-2"></i>Confirm Pull Out
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-cancel">
                    <i class="bi bi-x-lg me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div> 