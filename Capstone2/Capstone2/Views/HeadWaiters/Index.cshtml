@model List<Capstone2.Models.HeadWaiter>
@{
    ViewData["Title"] = "Head Waiters Management";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    @if (TempData["Success"] != null)
    {
        <div class="modern-alert modern-alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
        </div>
    }

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-person-badge"></i>
            </div>
            <div>
                <h1 class="modern-title">Head Waiters Management</h1>
                <p class="modern-subtitle">Manage your catering head waiters and their assignments</p>
            </div>
        </div>
        <div class="modern-action-buttons">
            <a asp-action="UpSert" class="modern-action-btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                New Head Waiter
            </a>
        </div>
    </div>

    <!-- Head Waiters Table -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-people-fill"></i>
                Head Waiters List (@Model.Count)
            </h5>
        </div>
        <div class="table-responsive">
            <table class="modern-table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Employee Number</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var head in Model)
                    {
                        <tr>
                            <td>
                                <span class="modern-badge">@head.User.UserNumber</span>
                            </td>
                            <td>
                                <div class="modern-name">@head.User.Username</div>
                            </td>
                            <td>
                                <div class="modern-name">@head.User.FirstName @head.User.LastName</div>
                            </td>
                            <td>
                                <span class="modern-status-badge active">
                                    <i class="bi bi-check-circle"></i>
                                    Active
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="modern-table-actions">
                                    <a asp-action="UpSert" asp-route-id="@head.HeadWaiterId" class="modern-table-action-btn btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                    @* <a asp-action="ViewOrders" asp-route-id="@head.HeadWaiterId" class="modern-table-action-btn btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                        View Orders
                                    </a> *@
                                    <a asp-action="Delete" asp-route-id="@head.HeadWaiterId" class="modern-table-action-btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}