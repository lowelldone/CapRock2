@model List<Capstone2.Models.HeadWaiter>
@{
    ViewData["Title"] = "Head Waiters Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Head Waiters</h2>
        @* If you ever need to add more head waiters *@
        <a asp-action="UpSert" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> New Head Waiter
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var head in Model)
            {
                <tr>
                    <td>@head.User.Username</td>
                    <td>@head.User.FirstName</td>
                    <td>@head.User.LastName</td>
                    <td class="text-center">
                        <a asp-action="UpSert" asp-route-id="@head.HeadWaiterId" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@head.HeadWaiterId" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}