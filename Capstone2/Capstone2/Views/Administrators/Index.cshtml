@model IEnumerable<Capstone2.Models.User>

@{
    ViewData["Title"] = "Administrators Management";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="modern-alert modern-alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="modern-alert modern-alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-shield-fill-check"></i>
            </div>
            <div>
                <h1 class="modern-title">Administrators Management</h1>
                <p class="modern-subtitle">Manage system administrators and their access</p>
            </div>
        </div>
        <div class="modern-action-buttons">
            <a asp-action="Create" class="modern-action-btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                New Administrator
            </a>
        </div>
    </div>

    <!-- Administrators Table -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-people-fill"></i>
                Administrators List (@Model.Count())
            </h5>
        </div>
        <div class="table-responsive">
            <table class="modern-table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Employee Number</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <span class="modern-badge">@(string.IsNullOrEmpty(user.UserNumber) ? "N/A" : user.UserNumber)</span>
                                </td>
                                <td>
                                    <div class="modern-name">@user.Username</div>
                                </td>
                                <td>
                                    <div class="modern-name">@user.FirstName @user.LastName</div>
                                </td>
                                <td>
                                    <span class="modern-status-badge accepted">
                                        <i class="bi bi-check-circle"></i>
                                        Active
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="modern-table-actions">
                                        <a asp-action="Edit" asp-route-id="@user.UserId" class="modern-table-action-btn btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                            Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.UserId" class="modern-table-action-btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">
                                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                <p class="mt-3 mb-0">No administrators found</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
