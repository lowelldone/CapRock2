@using Capstone2.Controllers
@model Capstone2.Models.Order
@{
    ViewData["Title"] = "Review Selected Foods";
    var items = ViewBag.SelectedItems as List<Capstone2.Models.OrderDetail>;
    decimal totalPayment = 0;
}

<h2>Review Selected Foods</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-controller="SelectedFoods" asp-action="Index" method="post">
    <input type="hidden" name="OrderItemsJson" value="@TempData["OrderItemsJson"]" />

    @if (items != null && items.Any())
    {
        <input name="isConfirmed" type="hidden" value="true" />

        <h4>Selected Items:</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    decimal subtotal = decimal.Parse((item.Menu.Price * item.Quantity).ToString());
                    totalPayment += subtotal;
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Menu.Price.ToString("0.00")</td>
                        <td>@subtotal.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total Payment:</strong></td>
                    <td><strong>@totalPayment.ToString("0.00")</strong></td>
                </tr>
            </tfoot>
        </table>
    }

    <button type="submit" class="btn btn-primary w-100">Next</button>
</form>
