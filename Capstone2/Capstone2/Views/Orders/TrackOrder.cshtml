@model Capstone2.Models.Order

@{
    ViewData["Title"] = "Track Your Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-purple: #7c3aed;
        --primary-purple-dark: #6d28d9;
        --primary-purple-light: #a78bfa;
        --secondary-purple: #8b5cf6;
        --accent-purple: #c084fc;
        --purple-bg: #faf5ff;
        --purple-bg-light: #f3e8ff;
        --purple-border: #e9d5ff;
        --text-purple: #581c87;
    }

    .track-order-container {
        max-width: 800px;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    .track-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(124, 58, 237, 0.1);
        padding: 2.5rem;
        margin-bottom: 2rem;
    }

    .track-title {
        color: var(--text-purple);
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
    }

    .search-section {
        background: var(--purple-bg-light);
        padding: 2rem;
        border-radius: 0.75rem;
        margin-bottom: 2rem;
    }

    .search-label {
        color: var(--text-purple);
        font-weight: 600;
        margin-bottom: 0.75rem;
        display: block;
    }

    .search-input {
        width: 100%;
        padding: 0.875rem 1.25rem;
        border: 2px solid var(--purple-border);
        border-radius: 0.5rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .search-input:focus {
            outline: none;
            border-color: var(--primary-purple);
            box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
        }

    .search-btn {
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        margin-top: 1rem;
    }

        .search-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(124, 58, 237, 0.3);
        }

    .error-message {
        background: #fee2e2;
        border: 1px solid #fecaca;
        color: #991b1b;
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .order-found {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-confirmed {
        background: #dbeafe;
        color: #1e40af;
    }

    .status-preparing {
        background: #e0e7ff;
        color: #3730a3;
    }

    .status-ready {
        background: #d1fae5;
        color: #065f46;
    }

    .status-completed {
        background: #dcfce7;
        color: #166534;
    }

    .status-cancelled {
        background: #fee2e2;
        color: #991b1b;
    }

    .order-header {
        border-bottom: 2px solid var(--purple-border);
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

    .order-number-display {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-purple);
        margin-bottom: 0.75rem;
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .info-title {
        color: var(--text-purple);
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
    }

        .info-title i {
            margin-right: 0.5rem;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .info-item {
        background: var(--purple-bg);
        padding: 1rem;
        border-radius: 0.5rem;
        border-left: 4px solid var(--primary-purple);
    }

    .info-label {
        font-size: 0.875rem;
        color: #64748b;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .info-value {
        color: #1e293b;
        font-size: 1rem;
        font-weight: 500;
    }

    .items-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .items-table thead {
            background: var(--purple-bg-light);
        }

        .items-table th {
            padding: 0.875rem;
            text-align: left;
            color: var(--text-purple);
            font-weight: 600;
            font-size: 0.95rem;
        }

        .items-table td {
            padding: 0.875rem;
            border-bottom: 1px solid var(--purple-border);
            color: #334155;
        }

        .items-table tbody tr:hover {
            background: var(--purple-bg);
        }

    .total-section {
        background: var(--purple-bg-light);
        padding: 1.5rem;
        border-radius: 0.5rem;
        margin-top: 1.5rem;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        font-size: 1.125rem;
    }

    .total-label {
        font-weight: 600;
        color: var(--text-purple);
    }

    .total-amount {
        font-weight: 700;
        color: var(--primary-purple);
        font-size: 1.5rem;
    }

    .back-btn {
        background: white;
        border: 2px solid var(--primary-purple);
        color: var(--primary-purple);
        padding: 0.75rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

        .back-btn:hover {
            background: var(--primary-purple);
            color: white;
            transform: translateY(-2px);
        }

    .package-badge {
        display: inline-block;
        background: var(--accent-purple);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: 600;
        margin-left: 0.5rem;
    }

    .rush-order-alert {
        background: #fef3c7;
        border-left: 4px solid #f59e0b;
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        animation: pulse 2s ease-in-out infinite;
    }

        .rush-order-alert i {
            font-size: 1.5rem;
            color: #f59e0b;
            margin-right: 0.75rem;
        }

    .rush-order-alert-content h4 {
        color: #92400e;
        font-size: 1rem;
        font-weight: 700;
        margin: 0 0 0.25rem 0;
    }

    .rush-order-alert-content p {
        color: #78350f;
        font-size: 0.875rem;
        margin: 0;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.9;
        }
    }

    @@media (max-width: 768px) {
        .track-card {
            padding: 1.5rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .items-table {
            font-size: 0.875rem;
        }

            .items-table th,
            .items-table td {
                padding: 0.5rem;
            }
    }
</style>

<div class="track-order-container">
    <div class="track-card">
        <h1 class="track-title">🔍 Track Your Order</h1>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
            </div>
        }

        <div class="search-section">
            <form method="post" asp-action="TrackOrder">
                <label class="search-label">Enter Your Order Number:</label>
                <input type="text"
                       name="orderNumber"
                       class="search-input"
                       placeholder="e.g., ORD-2024-001"
                       required
                       value="@(Model?.OrderNumber ?? "")" />
                <button type="submit" class="search-btn">
                    <i class="bi bi-search"></i> Track Order
                </button>
            </form>
        </div>

        @if (Model != null)
        {
            <div class="order-found">
                <div class="order-header">
                    <div class="order-number-display">Order #@Model.OrderNumber</div>
                    <div>
                        Status: <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                    </div>
                </div>

                @if (Model.IsRushOrder)
                {
                    <div class="rush-order-alert">
                        <i class="bi bi-lightning-charge-fill"></i>
                        <div class="rush-order-alert-content">
                            <h4>⚡ Rush Order</h4>
                            <p>This is a same-day order. A 10% rush order fee has been applied to ensure priority processing.</p>
                        </div>
                    </div>
                }

                <!-- Customer Information -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="bi bi-person-circle"></i> Customer Information
                    </h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Name</div>
                            <div class="info-value">@Model.Customer.Name</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Contact Number</div>
                            <div class="info-value">@Model.Customer.ContactNo</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Address</div>
                            <div class="info-value">@Model.Customer.Address</div>
                        </div>
                    </div>
                </div>

                <!-- Event Information -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="bi bi-calendar-event"></i> Event Details
                    </h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Order Date</div>
                            <div class="info-value">@Model.OrderDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Catering Date</div>
                            <div class="info-value">@Model.CateringDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Serving Time</div>
                            <div class="info-value">@Model.timeOfFoodServing.ToString("hh:mm tt")</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Venue</div>
                            <div class="info-value">@Model.Venue</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Occasion</div>
                            <div class="info-value">@Model.Occasion</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Number of Guests</div>
                            <div class="info-value">@Model.NoOfPax persons</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Motif/Theme</div>
                            <div class="info-value">@Model.Motif</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                        {
                            <div class="info-item" style="grid-column: 1 / -1;">
                                <div class="info-label">Additional Notes</div>
                                <div class="info-value">@Model.AdditionalNotes</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Order Items -->
                <div class="info-section">
                    <h3 class="info-title">
                        <i class="bi bi-cart-check"></i> Order Items
                    </h3>
                    @{
                        bool isPackageOrder = Model.OrderDetails.Any(od => od.MenuPackageId != null);
                    }
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                @if (!isPackageOrder)
                                {
                                    <th style="text-align: center;">Quantity</th>
                                }
                                <th style="text-align: right;">Price</th>
                                @if (!isPackageOrder)
                                {
                                    <th style="text-align: right;">Subtotal</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        @item.Menu.Name
                                        @if (item.MenuPackageId != null)
                                        {
                                            <span class="package-badge">PACKAGE</span>
                                        }
                                        @if (item.IsFreeLechon)
                                        {
                                            <span class="package-badge" style="background: #10b981;">FREE</span>
                                        }
                                    </td>
                                    @if (!isPackageOrder)
                                    {
                                        <td style="text-align: center;">@item.Quantity</td>
                                        <td style="text-align: right;">₱@item.Menu.Price.ToString("N2")</td>
                                        <td style="text-align: right;">₱@item.subTotal.ToString("N2")</td>
                                    }
                                    else
                                    {
                                        <td style="text-align: right;">₱@item.Menu.Price.ToString("N2")</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="total-section">
                        @{
                            var packageOrder = Model.OrderDetails.FirstOrDefault(od => od.MenuPackageId != null);
                        }

                        @if (isPackageOrder && packageOrder != null)
                        {
                            <!-- Package Pricing Breakdown -->
                            <div style="margin-bottom: 1rem; padding: 1rem; background: rgba(167, 139, 250, 0.1); border-radius: 0.5rem;">
                                <div style="color: var(--text-purple); font-weight: 600; margin-bottom: 0.75rem; display: flex; align-items: center;">
                                    <i class="bi bi-box-seam" style="margin-right: 0.5rem;"></i>
                                    Package Pricing Breakdown
                                </div>
                                <div class="total-row" style="font-size: 0.95rem; margin-bottom: 0.5rem;">
                                    <span style="color: #64748b;">Package Price per Person:</span>
                                    <span style="color: #334155; font-weight: 600;">₱@((packageOrder.MenuPackage?.Price ?? (double)(packageOrder.PackagePrice ?? 0)).ToString("N2"))</span>
                                </div>
                                <div class="total-row" style="font-size: 0.95rem; margin-bottom: 0.5rem;">
                                    <span style="color: #64748b;">Package Subtotal:</span>
                                    <span style="color: #334155; font-weight: 600;">₱@(((packageOrder.MenuPackage?.Price ?? (double)(packageOrder.PackagePrice ?? 0)) * Model.NoOfPax).ToString("N2"))</span>
                                </div>
                                @{
                                    var extras = Model.OrderDetails.Where(od => !od.IsFreeLechon && od.Type == "Package Extra").Sum(od => (od.Menu?.Price ?? 0) / 10 * Model.NoOfPax);
                                }
                                @if (extras > 0)
                                {
                                    <div class="total-row" style="font-size: 0.95rem; margin-bottom: 0.5rem;">
                                        <span style="color: #64748b;">Package Extras:</span>
                                        <span style="color: #334155; font-weight: 600;">₱@extras.ToString("N2")</span>
                                    </div>
                                }
                            </div>
                        }

                        @if (Model.IsRushOrder && Model.BaseAmount > 0)
                        {
                            <div class="total-row" style="font-size: 1rem; border-bottom: 1px solid var(--purple-border); padding-bottom: 0.75rem; margin-bottom: 0.75rem;">
                                <span style="color: #64748b;">Base Amount:</span>
                                <span style="color: #334155; font-weight: 600;">₱@Model.BaseAmount.ToString("N2")</span>
                            </div>
                            <div class="total-row" style="font-size: 1rem;">
                                <span style="color: #f59e0b; display: flex; align-items: center;">
                                    <i class="bi bi-lightning-charge-fill" style="margin-right: 0.25rem;"></i>
                                    Rush Order Fee (10%):
                                </span>
                                <span style="color: #f59e0b; font-weight: 600;">₱@Model.RushOrderFee.ToString("N2")</span>
                            </div>
                        }
                        <div class="total-row" style="@(Model.IsRushOrder && Model.BaseAmount > 0 ? "border-top: 2px solid var(--primary-purple); padding-top: 0.75rem; margin-top: 0.75rem;" : "")">
                            <span class="total-label">Total Amount:</span>
                            <span class="total-amount">₱@Model.TotalPayment.ToString("N2")</span>
                        </div>
                        @if (Model.AmountPaid > 0)
                        {
                            <div class="total-row" style="font-size: 1rem;">
                                <span style="color: #64748b;">Amount Paid:</span>
                                <span style="color: #10b981; font-weight: 600;">₱@Model.AmountPaid.ToString("N2")</span>
                            </div>
                            <div class="total-row" style="font-size: 1rem;">
                                <span style="color: #64748b;">Balance:</span>
                                <span style="color: #ef4444; font-weight: 600;">₱@Model.Balance.ToString("N2")</span>
                            </div>
                        }
                    </div>
                </div>

                <div style="text-align: center;">
                    <a href="@Url.Action("Homepage", "Home")" class="back-btn">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

