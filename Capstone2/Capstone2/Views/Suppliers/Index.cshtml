@model IEnumerable<Capstone2.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    <!-- Alerts Section -->
    @if (TempData["SupplierSuccess"] != null)
    {
        var msg = TempData["SupplierSuccess"]?.ToString();
        var isNone = !string.IsNullOrWhiteSpace(msg) && msg.Contains("No materials", StringComparison.OrdinalIgnoreCase);
        var alertClass = isNone ? "modern-alert modern-alert-info" : "modern-alert modern-alert-success";
        <div id="supplier-toast" class="@alertClass" role="alert">
            @if (isNone)
            {
                <i class="bi bi-info-circle me-2"></i>
            }
            else
            {
                <i class="bi bi-check-circle me-2"></i>
            }
            @msg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <script>
            setTimeout(function () {
                var toast = document.getElementById('supplier-toast');
                if (toast) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(toast);
                    bsAlert.close();
                }
            }, 3000);
        </script>
    }
    @if (TempData["SupplierError"] != null)
    {
        <div class="modern-alert modern-alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["SupplierError"]
        </div>
    }

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-truck"></i>
            </div>
            <div>
                <h1 class="modern-title">Suppliers</h1>
                <p class="modern-subtitle">Manage your catering suppliers and contacts here</p>
            </div>
        </div>
        <div class="modern-action-buttons">
            <a asp-action="Create" class="modern-action-btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Add New Supplier
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="modern-search-card">
        <form asp-controller="Suppliers" asp-action="Index" method="get" class="modern-search-form">
            <div>
                <label class="modern-form-label">Search Suppliers</label>
                <input type="text" name="searchString" class="modern-form-control" placeholder="Search suppliers by company name..." />
            </div>
            <div>
                <button type="submit" class="modern-btn-search w-100">
                    <i class="bi bi-search me-2"></i>Search
                </button>
            </div>
            <div>
                <a asp-action="Index" class="modern-action-btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-clockwise me-2"></i>Clear
                </a>
            </div>
        </form>
    </div>

    <!-- Suppliers Table -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-list-ul"></i>
                All Suppliers
            </h5>
        </div>
        <div class="table-responsive">
            <table class="modern-table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Company Name</th>
                        <th>Contact Person</th>
                        <th>Contact Number</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="modern-name">@Html.DisplayFor(modelItem => item.CompanyName)</div>
                            </td>
                            <td>
                                <div class="modern-info">@Html.DisplayFor(modelItem => item.ContactPerson)</div>
                            </td>
                            <td>
                                <div class="modern-info">@Html.DisplayFor(modelItem => item.ContactNo)</div>
                            </td>
                            <td class="text-end">
                                <div class="modern-table-actions">
                                    <a asp-action="Edit" asp-route-id="@item.SupplierId" class="modern-table-action-btn btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                    <a asp-action="ManagePrices" asp-route-id="@item.SupplierId" class="modern-table-action-btn btn-outline-secondary">
                                        <i class="bi bi-currency-dollar"></i>
                                        Prices
                                    </a>
                                    <a asp-action="ViewTransactions" asp-route-id="@item.SupplierId" class="modern-table-action-btn btn-outline-info">
                                        <i class="bi bi-receipt"></i>
                                        View
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SupplierId" class="modern-table-action-btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
