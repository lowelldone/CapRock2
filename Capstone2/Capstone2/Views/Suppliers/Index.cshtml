@model IEnumerable<Capstone2.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<style>
    body, .container-fluid, .card, .table {
        font-family: 'Segoe UI', sans-serif;
    }

    .suppliers-bg {
        background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);
        min-height: 100vh;
        border-radius: 24px;
        padding-bottom: 2rem;
    }

    .suppliers-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .suppliers-header-icon {
        font-size: 2.5rem;
        color: #0d6efd;
        background: #e0f2fe;
        border-radius: 12px;
        padding: 8px 14px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
    }

    .suppliers-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: -8px;
        margin-bottom: 18px;
    }

    .add-supplier-btn {
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 10px 22px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
    }

    .card {
        border-radius: 20px !important;
        box-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.08);
    }

    .table {
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
    }

        .table thead th {
            background: #f1f5f9;
            font-size: 1.15rem;
            font-weight: 700;
            color: #344767;
            border-bottom: 2px solid #e0e7ef;
        }

        .table tbody tr:nth-child(even) {
            background: #f8fafc;
        }

        .table tbody tr:hover {
            background: #e0f2fe;
            transition: background 0.2s;
        }

    .action-btn {
        border-radius: 8px;
        font-size: 1rem;
        padding: 6px 16px;
        margin-left: 2px;
        margin-right: 2px;
        transition: background 0.2s, color 0.2s;
    }

        .action-btn i {
            margin-right: 4px;
        }
</style>

<div class="container-fluid mt-4 px-4 suppliers-bg">
    @if (TempData["SupplierSuccess"] != null)
    {
        var msg = TempData["SupplierSuccess"]?.ToString();
        var isNone = !string.IsNullOrWhiteSpace(msg) && msg.Contains("No materials", StringComparison.OrdinalIgnoreCase);
        var alertClass = isNone ? "alert-info" : "alert-success";
        <div id="supplier-toast" class="alert @alertClass alert-dismissible fade show" role="alert">
            @msg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <script>
            setTimeout(function () {
                var toast = document.getElementById('supplier-toast');
                if (toast) {
                    var bsAlert = bootstrap.Alert.getOrCreateInstance(toast);
                    bsAlert.close();
                }
            }, 3000);
        </script>
    }
    @if (TempData["SupplierError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["SupplierError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <div class="suppliers-header mb-1">
                <span class="suppliers-header-icon"><i class="bi bi-truck"></i></span>
                <h2 class="fw-bold mb-0">Suppliers</h2>
            </div>
            <div class="suppliers-subtitle">Manage your catering suppliers and contacts here.</div>
        </div>
        <div class="d-flex align-items-center gap-2">
            <button type="button" class="btn btn-success add-supplier-btn" data-bs-toggle="modal" data-bs-target="#autoRestockModal">
                <i class="bi bi-lightning-charge"></i> Auto Restock
            </button>
            <a asp-action="Create" class="btn btn-primary add-supplier-btn"><i class="bi bi-plus-lg"></i> Add New Supplier</a>
        </div>
    </div>

    <div class="card mb-4 shadow-sm border-0 rounded-4">
        <div class="card-body">
            <form asp-controller="Suppliers" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Search suppliers by company name..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 rounded-4 overflow-hidden">
                <thead class="table-light rounded-4">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().CompanyName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ContactPerson)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ContactNo)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactNo)</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-outline-primary btn-sm action-btn"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-action="ManagePrices" asp-route-id="@item.SupplierId" class="btn btn-outline-secondary action-btn"><i class="bi bi-currency-dollar"></i> Prices</a>
                                <a asp-action="ViewTransactions" asp-route-id="@item.SupplierId" class="btn btn-outline-info action-btn"><i class="bi bi-receipt"></i> Transactions</a>
                                <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-outline-danger action-btn"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Auto Restock Modal -->
    <div class="modal fade" id="autoRestockModal" tabindex="-1" aria-labelledby="autoRestockLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form asp-controller="Suppliers" asp-action="AutoRestock" method="post" id="autoRestockForm">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="autoRestockLabel"><i class="bi bi-lightning-charge"></i> Auto Restock</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Consumable Reorder Point</label>
                                <input type="number" name="reorderPointConsumable" class="form-control" value="1000" min="1" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Consumable Target Level</label>
                                <input type="number" name="targetLevelConsumable" class="form-control" value="1500" min="1" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Non-consumable Reorder Point</label>
                                <input type="number" name="reorderPointNonConsumable" class="form-control" value="1000" min="1" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Non-consumable Target Level</label>
                                <input type="number" name="targetLevelNonConsumable" class="form-control" value="1500" min="1" required />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"><i class="bi bi-x-lg"></i> Cancel</button>
                        <button type="submit" class="btn btn-success"><i class="bi bi-lightning-charge"></i> Run Auto Restock</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
