@model Capstone2.Models.Supplier

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-truck"></i>
            </div>
            <div>
                <h1 class="modern-title">Edit Supplier</h1>
                <p class="modern-subtitle">Update supplier information</p>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-pencil-square"></i>
                Supplier Information
            </h5>
        </div>
        <div class="modern-card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SupplierId" />
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="modern-form-group">
                            <label asp-for="CompanyName" class="modern-form-label">Company Name</label>
                            <input asp-for="CompanyName" class="modern-form-control" placeholder="Enter company name" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="modern-form-group">
                            <label asp-for="ContactPerson" class="modern-form-label">Contact Person</label>
                            <input asp-for="ContactPerson" class="modern-form-control" placeholder="Enter contact person" />
                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modern-form-group">
                    <label asp-for="ContactNo" class="modern-form-label">Contact Number</label>
                    <input asp-for="ContactNo" class="modern-form-control" placeholder="Enter contact number" />
                    <span asp-validation-for="ContactNo" class="text-danger"></span>
                </div>
                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="modern-action-btn btn-primary">
                        <i class="bi bi-check-lg me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="modern-action-btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
