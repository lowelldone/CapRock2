@model Capstone2.Models.Order
@{
    ViewData["Title"] = "Schedule Details";
}

<div class="container-fluid mt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-calendar-event text-primary"></i> Schedule Details
            </h2>
            <p class="text-muted">Detailed information for Order #@Model.OrderNumber</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Schedules
        </a>
    </div>

    <div class="row">
        <!-- Customer Information -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Name:</div>
                        <div class="col-sm-8">@Model.Customer.Name</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Address:</div>
                        <div class="col-sm-8">@Model.Customer.Address</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Contact No:</div>
                        <div class="col-sm-8">@Model.Customer.ContactNo</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Catering Details -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Catering Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Catering Date:</div>
                        <div class="col-sm-8">@Model.CateringDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Time of Food Serving:</div>
                        <div class="col-sm-8">@Model.timeOfFoodServing.ToString("hh:mm tt")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Venue:</div>
                        <div class="col-sm-8">@Model.Venue</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Occasion:</div>
                        <div class="col-sm-8">@Model.Occasion</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Theme (Motif):</div>
                        <div class="col-sm-8">@Model.Motif</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Number of Pax:</div>
                        <div class="col-sm-8">@Model.NoOfPax</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Order Information -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Order Number:</div>
                        <div class="col-sm-8">@Model.OrderNumber</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Order Date:</div>
                        <div class="col-sm-8">@Model.OrderDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Status:</div>
                        <div class="col-sm-8">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (Model.Status == "Confirmed")
                            {
                                <span class="badge bg-info">Confirmed</span>
                            }
                            else if (Model.Status == "In Progress")
                            {
                                <span class="badge bg-primary">In Progress</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Total Payment:</div>
                        <div class="col-sm-8">₱@Model.TotalPayment.ToString("N2")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Amount Paid:</div>
                        <div class="col-sm-8">₱@Model.AmountPaid.ToString("N2")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4 fw-bold">Balance:</div>
                        <div class="col-sm-8">₱@Model.Balance.ToString("N2")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Staff Assignment -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Staff Assignment</h5>
                </div>
                <div class="card-body">
                    @if (Model.HeadWaiter != null)
                    {
                        <div class="row">
                            <div class="col-sm-4 fw-bold">Head Waiter:</div>
                            <div class="col-sm-8">@Model.HeadWaiter.User.FirstName @Model.HeadWaiter.User.LastName</div>
                        </div>
                        <hr>
                    }
                    
                    @if (Model.OrderWaiters != null && Model.OrderWaiters.Any())
                    {
                        <div class="row">
                            <div class="col-sm-4 fw-bold">Assigned Waiters:</div>
                            <div class="col-sm-8">
                                @foreach (var orderWaiter in Model.OrderWaiters)
                                {
                                    <div class="mb-1">
                                        • @orderWaiter.Waiter.User.FirstName @orderWaiter.Waiter.User.LastName
                                        @if (orderWaiter.Waiter.isTemporary)
                                        {
                                            <span class="badge bg-secondary ms-1">Temporary</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark ms-1">Regular</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-sm-4 fw-bold">Assigned Waiters:</div>
                            <div class="col-sm-8 text-muted">No waiters assigned yet</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Order Details -->
    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Order Details</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Menu Item</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td>@detail.Menu.Name</td>
                                <td>@detail.Quantity</td>
                                <td>₱@detail.Menu.Price.ToString("N2")</td>
                                <td>₱@((detail.Quantity * detail.Menu.Price).ToString("N2"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div> 