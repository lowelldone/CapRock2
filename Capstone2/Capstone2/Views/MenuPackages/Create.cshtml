@model Capstone2.Models.MenuPackages

@{
    ViewData["Title"] = "Create";
}

<style>
    body, .container, .card, .btn, h1, h2, h3, h4, h5, h6, p, label, input, textarea, select {
        font-family: 'Segoe UI', sans-serif;
    }

    .create-bg {
        background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);
        min-height: 100vh;
        border-radius: 24px;
        padding-bottom: 2rem;
    }

    .create-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .create-header-icon {
        font-size: 2.5rem;
        color: #0d6efd;
        background: #e0f2fe;
        border-radius: 12px;
        padding: 8px 14px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
    }

    .create-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: -8px;
        margin-bottom: 18px;
    }

    .form-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.08);
        padding: 2rem;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #e0e7ef;
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #6476f8;
            box-shadow: 0 0 0 0.2rem rgba(100, 118, 248, 0.25);
        }

    .btn-create {
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        box-shadow: 0 2px 8px 0 rgba(100, 118, 248, 0.10);
    }

    .btn-back {
        font-weight: 500;
        border-radius: 8px;
        padding: 0.5rem 1rem;
    }

    .toggle-input {
        margin-right: 8px;
    }

    .optional-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-left: 4px;
    }

    /* Validation Styles */
    .is-invalid {
        border-color: #dc3545 !important;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
    }

    .text-danger {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .alert {
        border-radius: 12px;
        border: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .alert-danger {
        background: linear-gradient(135deg, #ffe6e6 0%, #ffcccc 100%);
        color: #721c24;
        border-left: 4px solid #dc3545;
    }
</style>

<div class="container-fluid mt-4 px-4 create-bg">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <div class="create-header mb-1">
                <span class="create-header-icon"><i class="bi bi-bag-check"></i></span>
                <h2 class="fw-bold mb-0">Create Menu Package</h2>
            </div>
            <div class="create-subtitle">Add a new menu package to the system.</div>
        </div>
    </div>

    <div class="form-card">
        <form asp-action="Create">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Please correct the following errors:</strong>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MenuPackageName" class="form-label fw-semibold">Package Name <span class="text-danger">*</span></label>
                    <input asp-for="MenuPackageName" class="form-control" placeholder="Enter package name" />
                    <span asp-validation-for="MenuPackageName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfMainDish" class="form-label fw-semibold">Number of Main Dishes <span class="text-danger">*</span></label>
                    <input asp-for="NoOfMainDish" class="form-control" placeholder="Enter number" type="number" min="0" />
                    <span asp-validation-for="NoOfMainDish" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfSideDish" class="form-label fw-semibold">Number of Side Dishes</label>
                    <div class="d-flex align-items-center">
                        <input type="checkbox" id="NoOfSideDishcbx" class="toggle-input" data-target="#NoOfSideDish" />
                        <label for="NoOfSideDishcbx" class="optional-label">Optional</label>
                    </div>
                    <input asp-for="NoOfSideDish" class="form-control input-res" value="1" id="NoOfSideDish" type="number" min="0" />
                    <span asp-validation-for="NoOfSideDish" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfDessert" class="form-label fw-semibold">Number of Desserts</label>
                    <div class="d-flex align-items-center">
                        <input type="checkbox" id="NoOfDessertcbx" class="toggle-input" data-target="#NoOfDessert" />
                        <label for="NoOfDessertcbx" class="optional-label">Optional</label>
                    </div>
                    <input asp-for="NoOfDessert" class="form-control input-res" value="1" id="NoOfDessert" type="number" min="0" />
                    <span asp-validation-for="NoOfDessert" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfRice" class="form-label fw-semibold">Number of Rice Dishes</label>
                    <div class="d-flex align-items-center">
                        <input type="checkbox" id="NoOfRicecbx" class="toggle-input" data-target="#NoOfRice" />
                        <label for="NoOfRicecbx" class="optional-label">Optional</label>
                    </div>
                    <input asp-for="NoOfRice" class="form-control input-res" value="1" id="NoOfRice" type="number" min="0" />
                    <span asp-validation-for="NoOfRice" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NoOfSoftDrinks" class="form-label fw-semibold">Number of Soft Drinks</label>
                    <div class="d-flex align-items-center">
                        <input type="checkbox" id="NoOfSoftDrinkscbx" class="toggle-input" data-target="#NoOfSoftDrinks" />
                        <label for="NoOfSoftDrinkscbx" class="optional-label">Optional</label>
                    </div>
                    <input asp-for="NoOfSoftDrinks" class="form-control input-res" value="1" id="NoOfSoftDrinks" type="number" min="0" />
                    <span asp-validation-for="NoOfSoftDrinks" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-3">
                <form asp-controller="Menus" asp-action="Index" method="post" class="m-0">
                    <button type="submit" class="btn btn-primary btn-create">
                        <i class="bi bi-check-lg me-2"></i>Create Package
                    </button>
                </form>
                <a asp-controller="Menus" asp-action="Index" class="btn btn-outline-secondary btn-back">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(function () {
        $('.toggle-input').on('change', function () {
            const target = $(this).data('target');
            const isChecked = $(this).is(':checked');
            $(target).val(isChecked ? null : 1);
            $(target).prop('hidden', isChecked);
        });

        $('.input-res').on('change', function () {
            if ($(this).val() < 1) {
                $(this).val(1);
            }
        });

        // Form validation
        $('form').on('submit', function (e) {
            var isValid = true;

            // Clear previous error styling
            $('.form-control').removeClass('is-invalid');
            $('.text-danger').remove();

            // Validate Package Name
            if (!$('#MenuPackageName').val().trim()) {
                $('#MenuPackageName').addClass('is-invalid');
                $('#MenuPackageName').after('<span class="text-danger">Package name is required.</span>');
                isValid = false;
            }

            // Validate Main Dish quantity
            var mainDish = parseInt($('#NoOfMainDish').val());
            if (isNaN(mainDish) || mainDish < 0) {
                $('#NoOfMainDish').addClass('is-invalid');
                $('#NoOfMainDish').after('<span class="text-danger">Number of main dishes must be 0 or greater.</span>');
                isValid = false;
            }

            // Validate Side Dish quantity
            var sideDish = parseInt($('#NoOfSideDish').val());
            if (isNaN(sideDish) || sideDish < 0) {
                $('#NoOfSideDish').addClass('is-invalid');
                $('#NoOfSideDish').after('<span class="text-danger">Number of side dishes must be 0 or greater.</span>');
                isValid = false;
            }

            // Validate Dessert quantity
            var dessert = parseInt($('#NoOfDessert').val());
            if (isNaN(dessert) || dessert < 0) {
                $('#NoOfDessert').addClass('is-invalid');
                $('#NoOfDessert').after('<span class="text-danger">Number of desserts must be 0 or greater.</span>');
                isValid = false;
            }

            // Validate Rice quantity
            var rice = parseInt($('#NoOfRice').val());
            if (isNaN(rice) || rice < 0) {
                $('#NoOfRice').addClass('is-invalid');
                $('#NoOfRice').after('<span class="text-danger">Number of rice dishes must be 0 or greater.</span>');
                isValid = false;
            }

            // Validate Soft Drinks quantity
            var softDrinks = parseInt($('#NoOfSoftDrinks').val());
            if (isNaN(softDrinks) || softDrinks < 0) {
                $('#NoOfSoftDrinks').addClass('is-invalid');
                $('#NoOfSoftDrinks').after('<span class="text-danger">Number of soft drinks must be 0 or greater.</span>');
                isValid = false;
            }

            // At least one item must be selected
            if (mainDish === 0 && sideDish === 0 && dessert === 0 && rice === 0 && softDrinks === 0) {
                $('form').prepend('<div class="alert alert-danger" role="alert"><i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Error:</strong> At least one item type must be selected with quantity greater than 0.</div>');
                isValid = false;
            }

            if (!isValid) {
                e.preventDefault();
                // Scroll to first error
                $('.is-invalid').first().focus();
            }
        });
    });
</script>