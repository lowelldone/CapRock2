@model IEnumerable<Capstone2.Models.MenuPackages>

@{
    ViewData["Title"] = "Menu Packages";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Menu Packages</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add New Package</a>
    </div>

    <!-- Search Bar -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <form asp-controller="MenuPackages" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Search menu packages by name..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().MenuPackageName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().NoOfMainDish)</th>
                        <th>@Html.DisplayNameFor(model => model.First().NoOfSideDish)</th>
                        <th>@Html.DisplayNameFor(model => model.First().NoOfDessert)</th>
                        <th>@Html.DisplayNameFor(model => model.First().NoOfRice)</th>
                        <th>@Html.DisplayNameFor(model => model.First().NoOfSoftDrinks)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MenuPackageName</td>
                            <td>@item.NoOfMainDish</td>
                            <td>@item.NoOfSideDish</td>
                            <td>@item.NoOfDessert</td>
                            <td>@item.NoOfRice</td>
                            <td>@item.NoOfSoftDrinks</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.MenuPackageId" class="btn btn-sm btn-outline-secondary me-2" style="min-width: 80px;">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.MenuPackageId" class="btn btn-sm btn-outline-danger" style="min-width: 80px;">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
