@model List<Capstone2.Models.Waiter>
@{
    ViewData["Title"] = "Waiters Management";
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    @if (TempData["Success"] != null)
    {
        <div class="modern-alert modern-alert-success">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
        </div>
    }
    @if (TempData["NoOrderAssigned"] != null)
    {
        <div class="modern-alert modern-alert-info">
            <i class="bi bi-info-circle-fill me-2"></i>
            @TempData["NoOrderAssigned"]
        </div>
    }

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-people"></i>
            </div>
            <div>
                <h1 class="modern-title">Waiters Management</h1>
                <p class="modern-subtitle">Manage your catering waiters and their availability</p>
            </div>
        </div>
        <div class="modern-action-buttons">
            <a asp-action="UpSert" class="modern-action-btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Add New Waiter
            </a>
        </div>
    </div>

    <!-- Waiters Table -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-people-fill"></i>
                Waiters List (@Model.Count)
            </h5>
        </div>
        <div class="table-responsive">
            <table class="modern-table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Employee Number</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Employee Status</th>
                        <th>Availability</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var waiter in Model)
                    {
                        <tr>
                            <td>
                                <span class="modern-badge">@waiter.User.UserNumber</span>
                            </td>
                            <td>
                                <div class="modern-name">@waiter.User.Username</div>
                            </td>
                            <td>
                                <div class="modern-name">@waiter.User.FirstName @waiter.User.LastName</div>
                            </td>
                            <td>
                                @if (waiter.isTemporary)
                                {
                                    <span class="modern-status-badge inactive">
                                        <i class="bi bi-clock"></i>
                                        Temporary
                                    </span>
                                }
                                else
                                {
                                    <span class="modern-status-badge accepted">
                                        <i class="bi bi-check-circle"></i>
                                        Regular
                                    </span>
                                }
                            </td>
                            <td>
                                @if (waiter.Availability == "Busy")
                                {
                                    <span class="modern-status-badge settling">
                                        <i class="bi bi-x-circle"></i>
                                        Busy
                                    </span>
                                }
                                else
                                {
                                    <span class="modern-status-badge accepted">
                                        <i class="bi bi-check-circle"></i>
                                        Available
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="modern-table-actions">
                                    <a asp-action="UpSert" asp-route-id="@waiter.WaiterId" class="modern-table-action-btn btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                    @* @if (waiter.Availability == "Busy")
                                {
                                <a asp-action="AssignedOrder" asp-route-id="@waiter.WaiterId" class="modern-table-action-btn btn-outline-info">
                                <i class="bi bi-eye"></i>
                                View Order
                                </a>
                                } *@
                                    <a asp-action="Delete" asp-route-id="@waiter.WaiterId" class="modern-table-action-btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}