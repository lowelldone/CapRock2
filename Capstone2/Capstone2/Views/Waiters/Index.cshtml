@model List<Capstone2.Models.Waiter>
@{
    ViewData["Title"] = "Waiters Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Waiters</h2>
        @* If you ever need to add more head waiters *@
        <a asp-action="UpSert" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Add New Waiter
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Head Waiter</th>
                <th>Status</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var head in Model)
            {
                <tr>
                    <td>@head.User.Username</td>
                    <td>@head.User.FirstName</td>
                    <td>@head.User.LastName</td>
                    <!-- ✅ HeadWaiter column -->
                    <td>
                        @if (head.HeadWaiter != null && head.HeadWaiter.User != null)
                        {
                            @($"{head.HeadWaiter.User.FirstName} {head.HeadWaiter.User.LastName}")
                        }
                        else
                        {
                            <span class="text-muted">None</span>
                        }
                    </td>
                    <!-- ✅ Status column -->
                    <td>
                        @if (head.isTemporary)
                        {
                            <span class="badge bg-warning text-dark">Temporary</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Regular</span>
                        }
                    </td>


                    <td class="text-center">
                        <a asp-action="UpSert" asp-route-id="@head.WaiterId" class="btn btn-outline-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@head.WaiterId" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}