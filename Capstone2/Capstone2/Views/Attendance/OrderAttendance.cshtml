@model (List<Capstone2.Models.Waiter> waiters, List<Capstone2.Models.Attendance> attendances)
@{
    ViewData["Title"] = "Waiters Attendance for Order";
}

<h1>@ViewData["Title"]</h1>

<a asp-controller="PaidOrders" asp-action="Index" class="btn btn-secondary mb-3">Back to Orders</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Time In</th>
            <th>Time Out</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model.waiters)
        {
            var att = Model.attendances.FirstOrDefault(a => a.WaiterId == w.WaiterId);
            <tr>
                <td>@w.User.FirstName</td>
                <td>@w.User.LastName</td>
                <td>@(att?.TimeIn?.ToString("g") ?? "-")</td>
                <td>@(att?.TimeOut?.ToString("g") ?? "-")</td>
                <td>
                    @if (att == null || att.TimeIn == null)
                    {
                        <form asp-action="TimeInForOrder" asp-controller="Attendance" method="post" style="display:inline;">
                            <input type="hidden" name="orderId" value="@Context.Request.Query["orderId"]" />
                            <input type="hidden" name="waiterId" value="@w.WaiterId" />
                            <button type="submit" class="btn btn-warning btn-sm">Time In</button>
                        </form>
                    }
                    else if (att.TimeOut == null)
                    {
                        <form asp-action="TimeOutForOrder" asp-controller="Attendance" method="post" style="display:inline;">
                            <input type="hidden" name="orderId" value="@Context.Request.Query["orderId"]" />
                            <input type="hidden" name="waiterId" value="@w.WaiterId" />
                            <button type="submit" class="btn btn-warning btn-sm">Time Out</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-success">✔️ Done</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table> 