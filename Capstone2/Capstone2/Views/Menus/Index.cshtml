@model Capstone2.Models.MenusManagementViewModel

@{
    ViewData["Title"] = "Food Menu";

    var mainDishCategories = new[] { "Pork", "Beef", "Chicken", "Seafood" };
    var sideDishCategories = new[] { "Noodles & Pasta", "Salad", "Vegetables" };

    var mainDishes = Model.Menus.Where(m => mainDishCategories.Contains(m.Category));
    var sideDishes = Model.Menus.Where(m => sideDishCategories.Contains(m.Category));
    var desserts = Model.Menus.Where(m => m.Category == "Dessert");
    var softDrinks = Model.Menus.Where(m => m.Category == "SoftDrinks");
    var rice = Model.Menus.Where(m => m.Category == "Rice");
}

<link rel="stylesheet" href="~/css/modern-ui.css" />

<div class="container-fluid modern-bg">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="modern-header">
            <div class="modern-header-icon">
                <i class="bi bi-list-ul"></i>
            </div>
            <div>
                <h1 class="modern-title">Food Menu Management</h1>
                <p class="modern-subtitle">Manage your catering food menu and dishes efficiently</p>
            </div>
        </div>
        <div class="modern-action-buttons">
            <a asp-action="Create" class="modern-action-btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Add New Dish
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="modern-search-card">
        <form asp-controller="Menus" asp-action="Index" method="get" class="modern-search-form">
            <div>
                <label class="modern-form-label">Search Dishes</label>
                <input type="text" name="searchString" class="modern-form-control" placeholder="Search dishes by name..." />
            </div>
            <div>
                <button type="submit" class="modern-btn-search w-100">
                    <i class="bi bi-search me-2"></i>Search
                </button>
            </div>
        </form>
    </div>

    <!-- Main Dishes Section -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-egg-fried"></i>
                Main Dishes
            </h5>
        </div>
        @foreach (var category in mainDishCategories)
        {
            var items = mainDishes.Where(m => m.Category == category).ToList();
            if (items.Count == 0) { continue; }

            <div class="modern-card mb-3">
                <div class="modern-card-header">
                    <h6 class="modern-card-title">
                        <i class="bi bi-tag"></i>
                        @category (@items.Count)
                    </h6>
                </div>
                <div class="table-responsive">
                    <table class="modern-table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th style="min-width: 200px;">Dish Name</th>
                                <th style="min-width: 120px;">Category</th>
                                <th style="min-width: 100px;">Price</th>
                                <th style="min-width: 150px;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td>
                                        <div class="modern-name">@item.Name</div>
                                    </td>
                                    <td>
                                        <span class="modern-status-badge accepted">
                                            <i class="bi bi-tag"></i>
                                            @item.Category
                                        </span>
                                    </td>
                                    <td>
                                        <div class="modern-name">₱@item.Price.ToString("N2")</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="modern-table-actions">
                                            <a asp-action="Edit" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-primary">
                                                <i class="bi bi-pencil-square"></i>
                                                Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Side Dishes Section -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <h5 class="modern-status-card-title">
                <i class="bi bi-egg"></i>
                Side Dishes
            </h5>
        </div>
        @foreach (var category in sideDishCategories)
        {
            var items = sideDishes.Where(m => m.Category == category).ToList();
            if (items.Count == 0) { continue; }

            <div class="modern-card mb-3">
                <div class="modern-card-header">
                    <h6 class="modern-card-title">
                        <i class="bi bi-tag"></i>
                        @category (@items.Count)
                    </h6>
                </div>
                <div class="table-responsive">
                    <table class="modern-table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th style="min-width: 200px;">Dish Name</th>
                                <th style="min-width: 120px;">Category</th>
                                <th style="min-width: 100px;">Price</th>
                                <th style="min-width: 150px;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td>
                                        <div class="modern-name">@item.Name</div>
                                    </td>
                                    <td>
                                        <span class="modern-status-badge accepted">
                                            <i class="bi bi-tag"></i>
                                            @item.Category
                                        </span>
                                    </td>
                                    <td>
                                        <div class="modern-name">₱@item.Price.ToString("N2")</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="modern-table-actions">
                                            <a asp-action="Edit" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-primary">
                                                <i class="bi bi-pencil-square"></i>
                                                Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <!-- Desserts Section -->
    @if (desserts.Any())
    {
        <div class="modern-status-card">
            <div class="modern-status-card-header">
                <h5 class="modern-status-card-title">
                    <i class="bi bi-cake2"></i>
                    Desserts (@desserts.Count())
                </h5>
            </div>
            <div class="table-responsive">
                <table class="modern-table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="min-width: 200px;">Dish Name</th>
                            <th style="min-width: 120px;">Category</th>
                            <th style="min-width: 100px;">Price</th>
                            <th style="min-width: 150px;" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in desserts)
                        {
                            <tr>
                                <td>
                                    <div class="modern-name">@item.Name</div>
                                </td>
                                <td>
                                    <span class="modern-status-badge accepted">
                                        <i class="bi bi-tag"></i>
                                        @item.Category
                                    </span>
                                </td>
                                <td>
                                    <div class="modern-name">₱@item.Price.ToString("N2")</div>
                                </td>
                                <td class="text-end">
                                    <div class="modern-table-actions">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                            Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Soft Drinks Section -->
    @if (softDrinks.Any())
    {
        <div class="modern-status-card">
            <div class="modern-status-card-header">
                <h5 class="modern-status-card-title">
                    <i class="bi bi-cup-straw"></i>
                    Soft Drinks (@softDrinks.Count())
                </h5>
            </div>
            <div class="table-responsive">
                <table class="modern-table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="min-width: 200px;">Drink Name</th>
                            <th style="min-width: 120px;">Category</th>
                            <th style="min-width: 100px;">Price</th>
                            <th style="min-width: 150px;" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in softDrinks)
                        {
                            <tr>
                                <td>
                                    <div class="modern-name">@item.Name</div>
                                </td>
                                <td>
                                    <span class="modern-status-badge accepted">
                                        <i class="bi bi-tag"></i>
                                        @item.Category
                                    </span>
                                </td>
                                <td>
                                    <div class="modern-name">₱@item.Price.ToString("N2")</div>
                                </td>
                                <td class="text-end">
                                    <div class="modern-table-actions">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                            Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Rice Section -->
    @if (rice.Any())
    {
        <div class="modern-status-card">
            <div class="modern-status-card-header">
                <h5 class="modern-status-card-title">
                    <i class="bi bi-egg-fried"></i>
                    Rice (@rice.Count())
                </h5>
            </div>
            <div class="table-responsive">
                <table class="modern-table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="min-width: 200px;">Rice Name</th>
                            <th style="min-width: 120px;">Category</th>
                            <th style="min-width: 100px;">Price</th>
                            <th style="min-width: 150px;" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in rice)
                        {
                            <tr>
                                <td>
                                    <div class="modern-name">@item.Name</div>
                                </td>
                                <td>
                                    <span class="modern-status-badge accepted">
                                        <i class="bi bi-tag"></i>
                                        @item.Category
                                    </span>
                                </td>
                                <td>
                                    <div class="modern-name">₱@item.Price.ToString("N2")</div>
                                </td>
                                <td class="text-end">
                                    <div class="modern-table-actions">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                            Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="modern-table-action-btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Menu Packages Section -->
    <div class="modern-status-card">
        <div class="modern-status-card-header">
            <div class="d-flex justify-content-between align-items-center w-100">
                <h5 class="modern-status-card-title">
                    <i class="bi bi-box"></i>
                    Menu Packages (@Model.MenuPackagesList.Count())
                </h5>
                <a asp-controller="MenuPackages" asp-action="Create" class="modern-action-btn btn-primary">
                    <i class="bi bi-plus-lg"></i>
                    Add New Package
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="modern-table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="min-width: 180px;">Package Name</th>
                        <th style="min-width: 100px;">Main Dishes</th>
                        <th style="min-width: 100px;">Side Dishes</th>
                        <th style="min-width: 100px;">Desserts</th>
                        <th style="min-width: 80px;">Rice</th>
                        <th style="min-width: 100px;">Soft Drinks</th>
                        <th style="min-width: 150px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MenuPackagesList)
                    {
                        <tr>
                            <td>
                                <div class="modern-name">@item.MenuPackageName</div>
                            </td>
                            <td>
                                <span class="modern-badge">@item.NoOfMainDish</span>
                            </td>
                            <td>
                                <span class="modern-badge">@item.NoOfSideDish</span>
                            </td>
                            <td>
                                <span class="modern-badge">@item.NoOfDessert</span>
                            </td>
                            <td>
                                <span class="modern-badge">@item.NoOfRice</span>
                            </td>
                            <td>
                                <span class="modern-badge">@item.NoOfSoftDrinks</span>
                            </td>
                            <td class="text-end">
                                <div class="modern-table-actions">
                                    <a asp-controller="MenuPackages" asp-action="Edit" asp-route-id="@item.MenuPackageId" class="modern-table-action-btn btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>
                                    <a asp-controller="MenuPackages" asp-action="Delete" asp-route-id="@item.MenuPackageId" class="modern-table-action-btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
