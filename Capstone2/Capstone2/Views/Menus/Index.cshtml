@model IEnumerable<Capstone2.Models.Menu>

@{
    ViewData["Title"] = "Food Menu";

    var mainDishCategories = new[] { "Pork", "Beef", "Chicken", "Seafood" };
    var sideDishCategories = new[] { "Noodles & Pasta", "Salad", "Vegetables" };

    var mainDishes = Model.Where(m => mainDishCategories.Contains(m.Category));
    var sideDishes = Model.Where(m => sideDishCategories.Contains(m.Category));
    var desserts = Model.Where(m => m.Category == "Dessert");
    var softDrinks = Model.Where(m => m.Category == "SoftDrinks");
    var rice = Model.Where(m => m.Category == "Rice");
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-purple: #7c3aed;
            --primary-purple-dark: #6d28d9;
            --primary-purple-light: #a78bfa;
            --secondary-purple: #8b5cf6;
            --accent-purple: #c084fc;
            --purple-bg: #faf5ff;
            --purple-bg-light: #f3e8ff;
            --purple-border: #e9d5ff;
            --text-purple: #581c87;
            --text-purple-light: #7c3aed;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #3b82f6;
        }
        body, .container-fluid, .card, .table {
        font-family: 'Segoe UI', sans-serif;
        }

        .menus-bg {
        background: linear-gradient(135deg, #f8fafc 60%, #e0e7ef 100%);
        min-height: 100vh;
        border-radius: 24px;
        padding-bottom: 2rem;
        }

        .menus-header {
        display: flex;
        align-items: center;
        gap: 16px;
        }

        .menus-header-icon {
        font-size: 2.5rem;
        color: #0d6efd;
        background: #e0f2fe;
        border-radius: 12px;
        padding: 8px 14px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
        }

        .menus-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: -8px;
        margin-bottom: 18px;
        }

        .add-menu-btn {
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 12px;
        padding: 10px 22px;
        box-shadow: 0 2px 8px rgba(13,110,253,0.08);
        }

        .card {
        border-radius: 20px !important;
        box-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.08);
        }

        .table {
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
        }

        .table thead th {
            background: #f1f5f9;
            font-size: 1.15rem;
            font-weight: 700;
            color: #344767;
            border-bottom: 2px solid #e0e7ef;
        }

        .table tbody tr:nth-child(even) {
            background: #f8fafc;
        }

        .table tbody tr:hover {
            background: #e0f2fe;
            transition: background 0.2s;
        }

        .action-btn {
        border-radius: 8px;
        font-size: 1rem;
        padding: 6px 16px;
        margin-left: 2px;
        margin-right: 2px;
        transition: background 0.2s, color 0.2s;
        }

        .action-btn i {
            margin-right: 4px;
        }
    </style>
</head>
<div class="container-fluid mt-4 px-4 menus-bg">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <div class="menus-header mb-1">
                <span class="menus-header-icon"><i class="bi bi-list-ul"></i></span>
                <h2 class="fw-bold mb-0">Food Menu</h2>
            </div>
            <div class="menus-subtitle">Manage your catering food menu and dishes here.</div>
        </div>
        <a asp-action="Create" class="btn btn-primary add-menu-btn"><i class="bi bi-plus-lg"></i> Add New Dish</a>
    </div>

    <!-- Search Bar -->
    <div class="card mb-4 shadow-sm border-0 rounded-4">
        <div class="card-body">
            <form asp-controller="Menus" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Search dishes by name..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Main Dishes Table -->
    <h4 class="fw-bold" style="justify-content: center; display: flex;">Main Dishes</h4>
    @foreach (var category in mainDishCategories)
    {
        var items = mainDishes.Where(m => m.Category == category).ToList();
        if (items.Count == 0) { continue; }

        <div class="mb-3">
            <h5 class="fw-semibold">@category</h5>
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 rounded-4 overflow-hidden">
                        <thead class="table-light rounded-4">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@($"P{item.Price:0.00}")</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-outline-primary btn-sm action-btn">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


    <!-- Side Dishes Table -->
    <h4 class="fw-bold mt-5" style="justify-content: center; display: flex">Side Dishes</h4>
    @foreach (var category in sideDishCategories)
    {
        var items = sideDishes.Where(m => m.Category == category).ToList();
        if (items.Count == 0) { continue; }

        <div class="mb-3">
            <h5 class="fw-semibold">@category</h5>
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 rounded-4 overflow-hidden">
                        <thead class="table-light rounded-4">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@($"P{item.Price:0.00}")</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-sm btn-outline-secondary me-2">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


    <!-- Desserts Table -->
    @if (desserts.Any())
    {
        <h4 class="fw-bold mt-5" style="justify-content: center; display: flex">Desserts</h4>
        <div class="mb-3">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 rounded-4 overflow-hidden">
                        <thead class="table-light rounded-4">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in desserts)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@($"P{item.Price:0.00}")</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-outline-primary btn-sm action-btn"><i class="bi bi-pencil-square"></i>Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-outline-danger action-btn"><i class="bi bi-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Soft Drinks Table -->
    @if (desserts.Any())
    {
        <h4 class="fw-bold mt-5" style="justify-content: center; display: flex">Soft Drinks</h4>
        <div class="mb-3">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 rounded-4 overflow-hidden">
                        <thead class="table-light rounded-4">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in softDrinks)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@($"P{item.Price:0.00}")</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-outline-primary btn-sm action-btn"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-outline-danger action-btn"><i class="bi bi-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


    <!-- Rice Table -->
    @if (rice.Any())
    {
        <h4 class="fw-bold mt-5" style="justify-content: center; display: flex">Rice</h4>
        <div class="mb-3">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-0">
                    <table class="table table-hover mb-0 rounded-4 overflow-hidden">
                        <thead class="table-light rounded-4">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in rice)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@($"P{item.Price:0.00}")</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-sm btn-outline-secondary me-2">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
