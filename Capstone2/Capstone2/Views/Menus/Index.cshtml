</div>

<style>
    .search-highlight {
        background-color: #fff3cd !important;
        border-left: 4px solid #ffc107 !important;
        animation: searchPulse 2s ease-in-out;
    }

    @@keyframes searchPulse {
        0% { background-color: #fff3cd; }
        50% { background-color: #ffeaa7; }
        100% { background-color: #fff3cd; }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Check if there's a search term
        const searchString = '@Model.SearchString';
        
        if (searchString && searchString.trim() !== '') {
            // Find the first search result
            const searchResults = document.querySelectorAll('.search-highlight');
            
            if (searchResults.length > 0) {
                // Scroll to the first search result with smooth animation
                setTimeout(function() {
                    searchResults[0].scrollIntoView({
                        behavior: 'smooth',
                        block: 'center'
                    });
                    
                    // Add a temporary flash effect
                    searchResults[0].style.animation = 'searchPulse 1s ease-in-out';
                }, 500);
            }
        }
    });
</script>
