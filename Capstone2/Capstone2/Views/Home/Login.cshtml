@model Capstone2.Models.User

@{
    ViewData["Title"] = "Login";
}

<style>
    body, .container, .card, .btn, h2, label, input {
        font-family: 'Segoe UI', sans-serif;
    }

    .login-bg {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(100, 118, 248, 0.08);
    }

    .login-card {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px 0 rgba(34, 41, 47, 0.12);
        padding: 2.5rem 2rem 2rem 2rem;
        max-width: 400px;
        width: 100%;
    }

    .btn-login {
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 1.5rem;
        padding: 0.75rem 0;
        box-shadow: 0 2px 8px 0 rgba(100, 118, 248, 0.10);
    }
</style>

<div class="login-bg">
    <div class="login-card">
        <h2 class="mb-4 text-center fw-bold">Login</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <button type="submit" class="btn btn-primary w-100 btn-login mt-2">Login</button>
        </form>
    </div>
</div>