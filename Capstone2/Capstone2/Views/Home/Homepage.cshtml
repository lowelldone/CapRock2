@{
    ViewData["Title"] = "Welcome to Grush Catering";
}

<style>
    :root {
        --primary-purple: #7c3aed;
        --primary-purple-dark: #6d28d9;
        --primary-purple-light: #a78bfa;
        --secondary-purple: #8b5cf6;
        --accent-purple: #c084fc;
        --purple-bg: #faf5ff;
        --purple-bg-light: #f3e8ff;
        --purple-border: #e9d5ff;
        --text-purple: #581c87;
        --text-purple-light: #7c3aed;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --info-color: #3b82f6;
    }
    body, .container, .card, .btn, h1, h2, h3, h4, h5, h6, p {
        font-family: 'Segoe UI', sans-serif;
    }
    .hero-section {
        background: rgba(255,255,255,0.95);
        border-radius: 2rem;
        box-shadow: 0 8px 32px 0 rgba(124, 58, 237, 0.15);
        border: 1px solid var(--purple-border);
        padding: 3rem 2rem 2rem 2rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
    }
    .hero-section:hover {
        box-shadow: 0 12px 40px 0 rgba(124, 58, 237, 0.2);
        transform: translateY(-2px);
    }
    .hero-img-wrapper {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .hero-img-wrapper img {
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(124, 58, 237, 0.2);
        max-width: 90%;
        filter: brightness(0.97) saturate(1.1);
        transition: all 0.3s ease;
    }
    .hero-img-wrapper img:hover {
        transform: scale(1.02);
        box-shadow: 0 12px 40px 0 rgba(124, 58, 237, 0.3);
    }
    .section-divider {
        height: 4px;
        background: linear-gradient(90deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
        border-radius: 2px;
        margin: 3rem 0 2rem 0;
        opacity: 0.3;
    }
    .feature-card {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(124, 58, 237, 0.1);
        border: 1px solid var(--purple-border);
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        margin-bottom: 2rem;
        min-height: 260px;
        transition: all 0.3s ease;
    }
    .feature-card:hover {
        box-shadow: 0 12px 40px 0 rgba(124, 58, 237, 0.15);
        transform: translateY(-3px);
        border-color: var(--primary-purple);
    }
    .feature-card i {
        color: var(--primary-purple);
        transition: all 0.3s ease;
    }
    .feature-card:hover i {
        transform: scale(1.1);
        color: var(--secondary-purple);
    }
    .btn-order {
        font-size: 1.25rem;
        font-weight: 600;
        padding: 0.75rem 2.5rem;
        border-radius: 2rem;
        box-shadow: 0 4px 16px rgba(124, 58, 237, 0.2);
        background: linear-gradient(135deg, var(--primary-purple) 0%, var(--secondary-purple) 100%);
        border: none;
        color: white;
        transition: all 0.3s ease;
    }
    .btn-order:hover {
        background: linear-gradient(135deg, var(--primary-purple-dark) 0%, var(--primary-purple) 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(124, 58, 237, 0.3);
    }
    .cta-section {
        background: rgba(255,255,255,0.95);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px 0 rgba(124, 58, 237, 0.1);
        border: 1px solid var(--purple-border);
        margin-top: 2rem;
        margin-bottom: 2rem;
        padding: 2.5rem 1rem;
        transition: all 0.3s ease;
    }
    .cta-section:hover {
        box-shadow: 0 12px 40px 0 rgba(124, 58, 237, 0.15);
        transform: translateY(-2px);
    }
    /* Text color enhancements */
    .text-warning {
        color: var(--warning-color) !important;
    }
    .text-success {
        color: var(--success-color) !important;
    }
    .text-primary {
        color: var(--primary-purple) !important;
    }
</style>

<!-- Hero Section -->
<div class="container hero-section">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
            <h1 class="display-4 fw-bold mb-3">Delicious Catering for All Occasions</h1>
            <p class="lead mb-4">
                Grush Catering Services offers affordable, customizable catering packages for birthdays, weddings, and corporate events. Taste, quality, and service—guaranteed.
            </p>
            <a class="btn btn-primary btn-order mt-2" asp-controller="ClientMenus" asp-action="Index">Order Now</a>
        </div>
        <div class="col-md-6 hero-img-wrapper">
            <img src="~/images/GRUSH.jpg" class="img-fluid" alt="Catering food sample" />
        </div>
    </div>
</div>

<div class="section-divider"></div>

<!-- Features Section -->
<div class="container">
    <h2 class="text-center mb-5 fw-bold">Why Choose Us?</h2>
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="feature-card text-center h-100">
                <i class="bi bi-star-fill text-warning" style="font-size: 2.5rem;"></i>
                <h4 class="mt-3 fw-semibold">Premium Quality</h4>
                <p>Only the best ingredients go into our dishes. You’ll taste the difference!</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card text-center h-100">
                <i class="bi bi-wallet2 text-success" style="font-size: 2.5rem;"></i>
                <h4 class="mt-3 fw-semibold">Affordable Packages</h4>
                <p>Customize your menu according to your budget without sacrificing quality.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card text-center h-100">
                <i class="bi bi-truck text-info" style="font-size: 2.5rem;"></i>
                <h4 class="mt-3 fw-semibold">Reliable Delivery</h4>
                <p>We deliver on time, every time—hot, fresh, and ready to serve.</p>
            </div>
        </div>
    </div>
</div>

<div class="section-divider"></div>

<!-- Call to Action Section -->
<div class="container cta-section text-center">
    <h3 class="mb-3 fw-bold">Ready to make your event unforgettable?</h3>
    <a class="btn btn-outline-primary btn-lg btn-order" asp-controller="ClientMenus" asp-action="Index">Order Now</a>
</div>
